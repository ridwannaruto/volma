                            </div>
                        </div>
                        <div class="control-group primary">         
                                {{form_label(form.skills, ' ',{ 'label_attr': {'class': 'control-label'} })}}   
                            <div class="controls">
                                 {{form_widget(form.submit,{'label':'Update','attr':{'class':'btn btn-success span4'}})}}                           
                            </div></div>

                       {{ form_end(form) }}

                    

                
            </div>
        </div>
    </div>
</div>

{% endblock %}