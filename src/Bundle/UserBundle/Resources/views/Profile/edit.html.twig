                            </div>
                        </div>

                        <div class="control-group primary">
                                {{form_label(form.nic, 'NIC Number',{ 'label_attr': {'class': 'control-label'} })}}

                            <div class="controls">
                                    {{form_widget(form.nic)}}
                                <span class="help-inline">{{ form_errors(form.nic) }}</span>
                            </div>
                        </div>



                  

                        <div class="control-group primary">
                                {{form_label(form.mobilenumber, 'Mobile Number',{ 'label_attr': {'class': 'control-label'} })}}

                            <div class="controls">
                                    {{form_widget(form.mobilenumber)}}
                                <span class="help-inline">{{ form_errors(form.mobilenumber) }}</span>
                            </div>
                        </div>

                        <div class="control-group primary">
                                {{form_label(form.phonenumber, 'Phone Number',{ 'label_attr': {'class': 'control-label'} })}}

                            <div class="controls">
                                    {{form_widget(form.phonenumber)}}
                                <span class="help-inline">{{ form_errors(form.phonenumber) }}</span>
                            </div>
                        </div>

                        <div class="control-group primary">
                                {{form_label(form.address, 'Address',{ 'label_attr': {'class': 'control-label'} })}}

                            <div class="controls">
                                    {{form_widget(form.address)}}
                                <span class="help-inline">{{ form_errors(form.address) }}</span>
                            </div>
                        </div>

                        <div class="control-group primary">
                                {{form_label(form.city, 'City',{ 'label_attr': {'class': 'control-label'} })}}

                            <div class="controls">
                                    {{form_widget(form.city)}}
                                <span class="help-inline">{{ form_errors(form.city) }}</span>
                            </div>
                        </div>

                        <div class="control-group primary">
                                {{form_label(form.country, 'Country',{ 'label_attr': {'class': 'control-label'} })}}

                            <div class="controls">
                                    {{form_widget(form.country)}}
                                <span class="help-inline">{{ form_errors(form.country) }}</span>
                            </div>
                        </div>

                        <div class="control-group primary">
                                    {{form_label(form.dateofbirth, 'Date of Birth',{ 'label_attr': {'class': 'control-label'} })}}

                            <div class="controls">
                                    {{form_widget(form.dateofbirth,{'value':"now"|date("m/d/Y")})}}
                                <span class="help-inline">{{ form_errors(form.dateofbirth) }}</span>
                            </div>
                        </div>


                        <div class="control-group primary">
                                    {{form_label(form.department, 'Department',{ 'label_attr': {'class': 'control-label'} })}}

                            <div class="controls">
                                    {{form_widget(form.department)}}
                                <span class="help-inline">{{ form_errors(form.department) }}</span>
                            </div>
                        </div>

                        <div class="control-group primary">
                                    {{form_label(form.batch, 'Batch',{ 'label_attr': {'class': 'control-label'} })}}

                            <div class="controls">
                                    {{form_widget(form.batch)}}
                                <span class="help-inline">{{ form_errors(form.batch) }}</span>
                            </div>
                        </div>



