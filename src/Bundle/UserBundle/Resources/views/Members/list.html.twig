{%  extends "CoreBundle:Base:base.html.twig" %}


{% block content %}
<div id="content" class="span10">
    
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header well" data-original-title>
                <h2><i class="icon-list"></i> Members </h2>
                <div class="box-icon">

                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>

                </div>
            </div>
            <div class="box-content">
                {% if members != null %}
                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Department</th>
                            <th>Batch</th>
                            <th>Pillar</th>
                            <th>Type</th>                                          
                        </tr>
                    </thead>   
                    <tbody>
                        {% for member in members %}
                        <tr>
                            <td width="30%">
                                <a href="{{path('user_profile',{'userId':member.id})}}" > {{member.firstname}} {{member.lastname}}</a>
                            </td>
                            <td width="20%" class="center">
                                {{member.department}}
                            </td>
                            <td  width="10%" class="center"> 
                                {{member.batch}}
                            </td>
                            <td  width="20%" class="center"> 
                                {{member.pillar}}
                            </td>
                            <td  width="10%" class="center"> 
                                {% if member.accesslevel == 'Admin' %}
                                <span class="label label-important">Administrator</span>   
                                {% elseif member.accesslevel == 'Head'%}
                                <span class="label label-warning">Manager</span>
                                {% elseif member.accesslevel == 'Spiriter'%}
                                <span class="label label-info">Volunteer</span>
                            
                                {% endif %}

                            </td>                                       
                        </tr>

                        {% endfor %}

                    </tbody>
                </table>                 

                {% else %}
                <p align ="center">
                    you have no task to complete
                </p>

                {% endif %}
            </div>
        </div><!--/span-->
    </div><!--/row-->

</div>



{% endblock %}