{%  extends "CoreBundle:Base:base.html.twig" %}


{% block content %}
<div id="content" class="span10">
    <div class="row-fluid">
        <div class="box span12">                               

            <div class="box-content ">

                <div id="content" class="span12">
                    <h2>Project Details</h2>
                    <hr>
                     {% if app.session.get('user_id') == Project.manager%}
                    <div class="pull-right">
                        {% if Project.status == 0 %}
                        <button class="btn btn-small btn-complete btn-success" url="{{ path('project_complete', { 'projectId': Project.id }) }}" id="{{Project.id}}" >complete </button>
                        <a href=" {{ path('project_edit', { 'projectId': Project.id }) }}"><button  class="btn btn-small btn-inverse">edit</button></a>
                       {% endif %}
                        <button class="btn btn-small btn-danger btn-delete" url="{{ path('project_delete', { 'projectId': Project.id }) }}" id="{{Project.id}}" > delete </button>

                        <br>
                    </div>
                {% endif %}

                    <br>
                    <table width="100%">
                        <tr>
                            <td width ="5%"></td>
                            <td width ="55%" align="justify">
                                <h3>Project</h3>{{Project.name}}<br><br>                                
                                <h3>Objectives</h3>{{Project.objectives}}<br><br>
                                <h3>Description</h3>{{Project.description}}<br><br>
                                
                                
                            </td>
                            <td width="5%">

                            </td>
                            <td width ="35%">
                                <h3>Manager</h3><a href="{{path('user_profile',{'userId':Manager.id})}}">{{Manager.firstname}} {{Manager.lastname}}</a><br><br>
                                <h3>Started</h3>{{Project.start}}<br><br>
                                <h3>Due</h3>{{Project.due}}<br><br>
                                 <h3>Status</h3>
                                {% if Project.status == 1 %}
                                 <span class="label label-success">Completed</span>   <br><br>
                                 <h3>Ended</h3>{{Project.end|date('Y-m-d')}}<br><br>
                                {% else %}
                                <span class="label label-warning">Not Completed</span>  <br>

                                {% endif %}
                            

                            </td>
                        </tr>
                       
                    </table>
                    <br>


                </div>
            </div>
        </div>



    </div>

    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header well">
                <h2><i class="icon-list-alt"></i> Project Tasks</h2>
                <div class="box-icon">

                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>

                </div>
            </div>
            <div class="box-content">
                <div class="box-content">
                    <ul class="dashboard-list">
                       {% if app.session.get('access') == 'Head' or app.session.get('user_id') == Project.manager%}
                        <div class="row-fluid">
                            <div class="pull-right">
                           {% if Project.status == 0 %}
                                <a href="{{path('task_new')}}"><button class="btn btn-round btn-success"><i class="icon-plus"></i> Add Task </button></a>
                            {% endif %}
                            </div>
                        </div><br>
                       {% endif %}
                        <table class="records_list" width="100%">
                            <thead>
                                <tr>
                                    <th>Task</th>
                                    <th>Type</th>
                                    <th>Assigned To</th>
                                    <th>Manager</th>
                                    <th>Status </th>                              
                               
                                </tr>
                            </thead>
                            <tbody>
                                    {% for task in Tasks %}
  <tr>
                                    <td align="center"><a href="{{path('task_detail',{'taskId':task[0]})}}" >{{task[2]}}</a></td>
                                    <td align="center">
                                         {% if task[3] == 1 %}
                                        <span class="label label-info">Normal</span>   
                                {% elseif task[3] == 2 %}
                                        <span class="label label-warning">Important</span>  
                                {% elseif task[3] == 3 %}
                                        <span class="label label-inverse">Can Wait</span>  
                                {% elseif task[3] == 4 %}
                                        <span class="label label-important">Urgent</span>  
                                {% endif %}

                                    </td>
                                    <td align="center"><a href="{{path('user_profile',{'userId':task[4]})}}">{{task[5]}}</a>

                                    </td>   
                                    <td align="center"><a href="{{path('user_profile',{'userId':task[6]})}}">{{task[7]}}</a>

                                    </td> 
                                    <td align="center">
                                    {% if task[1] == 1 %}
                                        <span class="label label-success">Completed</span>   
                                {% else %}
                                        <span class="label label-warning">Not Completed</span>  

                                {% endif %}
                                    </td> 
                                  
                                </tr>
        {% endfor %}
                            </tbody>
                        </table>
                    </ul>

                </div></div>
        </div>
    </div>
    
    <div class="row-fluid ">
        <div class="box span12">                               
             <div class="box-header well">
                <h2><i class="icon-user"></i> Members Involved</h2>
                <div class="box-icon">

                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>

                </div>
            </div>
            <div class="box-content ">              
                <ul class="dashboard-list">
                    {% for member in Members %}
                    <li>
                        <a href="{{path('user_profile',{'userId':member[0]})}}">
                             {% if member[3] != null %}
                            <img class="dashboard-avatar" alt="Not Found" src="{{member[3]}}">  

                        {% else %}
                            <img class="dashboard-avatar" alt="Not Found" src="/web/bundles/User/Photo/default.jpg">  

                        {% endif%} 
                     
                        <strong>{{member[1]}}</strong></a><br>
                        <span class="label label-inverse">{{member[2]}}</span>  
                        <br>
                        <br>
                    </li>
                    {% endfor %}
                    
                </ul>


            </div>
        </div>



    </div>

    <div class="row-fluid ">
        <div class="box span12">                               
               <div class="box-header well">
                <h2><i class="icon-user"></i> Comments</h2>
                <div class="box-icon">

                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>

                </div>
            </div>
            <div class="box-content ">
            
                <ul class="dashboard-list">
                    {% for comment in Comments %}
                    <li>
                        <a href="{{path('user_profile',{'userId':comment.user})}}">
                              {% if comment.path != null %}
                            <img class="dashboard-avatar" alt="Usman" src="{{comment.path}}">  
                            
                        {% else %}
                            <img class="dashboard-avatar" alt="Usman" src="/web/bundles/User/Photo/default.jpg">  

                        {% endif%} 
             
                        <strong>{{comment.firstname}} {{comment.lastname}}</strong>
                        </a>         
                        {% if comment.user == app.session.get('user_id') %}
                        <button url="{{ path('comment_delete', { 'commentId': comment.id }) }}" id="{{comment.id}}"type="button" class=" close btn-comment">Ã—</button>
                        {% endif %} <br> 
                        {{comment.comment}}<br>
                         <span class="pull-right"><h6>{{comment.timestamp | date('Y-m-d H:i:s')}}</h6></span><br>
                    </li>
                    {% endfor %}
                    
                    <li>
                         <a href="{{path('user_profile',{'userId':app.session.get('user_id')})}}">
                            <img class="dashboard-avatar" alt="Usman" src="{{app.session.get('photo')}}">
                     
                        </a>
                        {{form_start(NewComment)}}
                        {{form_widget(NewComment.comment)}}<br>
                        {{form_widget(NewComment.task,{'type':'hidden'})}}
                        {{form_widget(NewComment.project,{'type':'hidden','value':Project.id})}}
                        {{form_widget(NewComment.submit,{'attr':{'class':'btn btn-primary span2 pull-right'}})}}
                        {{form_end(NewComment)}}
                        <br> <br>
                        </li>
                    
                </ul>


            </div>
        </div>



    </div>
</div>


{% endblock %}

{% block delete %}
<div class="modal hide fade" id="delete">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h3>Confirm</h3>
    </div>
    <div class="modal-body">
        <p align="center">Are you sure you want to delete this Project? <br>This will delete all tasks and comments related to this project.                          		
        </p>


    </div>
    <div class="modal-footer">

        <form action="empty" id = "continue-form" method="POST">
            <input name="id" id="del-id" type="hidden" value="empty" />
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <input type="submit" class="btn btn-primary" value="continue">
   
        </form>

    </div>
</div>

<div class="modal hide fade" id="comment">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h3>Confirm</h3>
    </div>
    <div class="modal-body">
        <p align="center">Are you sure you want to delete this Comment?                          		
        </p>


    </div>
    <div class="modal-footer">

        <form action="empty" id = "continue-form" method="POST">
            <input name="id" id="del-id" type="hidden" value="empty" />
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <input type="submit" class="btn btn-primary" value="continue">
        </form>

    </div>
</div>

<div class="modal hide fade" id="complete">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h3>Confirm</h3>
    </div>
    <div class="modal-body">
        <p align="center">Are you sure you want to complete this Project? <br>Once completed you cannot undo or assign new task under this project.                          		
        </p>


    </div>
    <div class="modal-footer">

        <form action="empty" id = "continue-form" method="POST">
            <input name="id" id="del-id" type="hidden" value="empty" />
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <input type="submit" class="btn btn-primary" value="continue">
        </form>

    </div>
</div>

	{% endblock %}