{%  extends "CoreBundle:Base:base.html.twig" %}


{% block content %}
    <div id="content" class="span10">
        <div class="row-fluid">

            <div class="box span6">
                <div class="box-content">
                    <div class="pull-right">
                        <a href="{{ path('profile_picture') }}"> <button class="btn btn-group btn-small">update profile picture</button></a>
                    </div>

                    <h3>Profile Information</h3>
                    <hr>

                    <div style="margin-left: 10%">

                        {%  if app.session.get('photo_path') %}
                            <img class = "pull-right" src="{{ app.session.get('photo_path') }}" width="100px" height="100px" style="border: 2px">
                        {%  else  %}
                            <img class = "pull-right"  src="{{ asset('bundles/ridwansite/images/default.jpg') }}" width="150px" height="150px" style="border: 2px">
                        {%  endif %}


                        <h3>{{ app.session.get('full_name') }}</h3><br>
                        <h5>Department</h5>
                        <h3>{{ app.session.get('department') }}</h3><br>
                        <br>


                    </div>

                </div>

            </div>

            <div class="box span6">
                <div class="box-content">

                    <h3>System Overview</h3>
                    <hr>

                    <table width = '100%'>
                        <tr>
                            <td width="2%"></td>
                            <td width="30%">
                                <ul class="dashboard-list">
                                    <h6>Tasks</h6>
                                    <li> <span class="green">{{ completedTaskInfo }}</span> Completed</li>
                                    <li> <span class="yellow">{{ ongoingTaskInfo }}</span> Ongoing</li><br>
                                    <span class="blue">{{ completedTaskInfo + ongoingTaskInfo  }} </span><strong>Total</strong>
                                </ul>
                            </td>
                            <td width="3%"></td>
                            <td width="30%">

                                <ul class="dashboard-list">
                                    <h6>Projects</h6>
                                    <li> <span class="green">{{ completedProjectInfo }}</span> Completed</li>
                                    <li> <span class="yellow">{{ ongoingProjectInfo }}</span> Ongoing</li><br>
                                    <span class="blue">{{ ongoingProjectInfo + completedProjectInfo }}</span>  <strong>Total</strong>

                                </ul>

                            </td>
                            <td width="3%"></td>

                            <td width="30%">

                                <ul class="dashboard-list">
                                    <h6>Volunteers</h6>
                                    <li> <span class="green">{{ activeVolunteerInfo }}</span> Active</li>
                                    <li> <span class="yellow">{{ pendingVolunteerInfo }}</span> Pending</li><br>
                                    <span class="blue">{{ activeVolunteerInfo + pendingVolunteerInfo  }}</span>  <strong>Total</strong>

                                </ul>

                            </td>
                            <td width="2%"></td>
                        </tr>
                    </table>


                </div>

            </div>
        </div>
        <div class="row-fluid">
            <div class="box span12">
                <div class="box-header well" data-original-title>
                    <h2><i class="icon-user"></i> Member Activities</h2>
                    <div class="box-icon">

                        <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>

                    </div>
                </div>
                <div class="box-content">
                    <div class="box-content">
                        <ul class="dashboard-list">
                            {% for member in members %}
                                <li>

                                    <div class ="pull-right">
                                        {% if member.status == 1 %}
                                            <span class="label label-warning">Pending</span>   <br><br>
                                            <button url="{{ path('user_approve', { 'userId': member.id }) }}" id="{{member.id}}" class="btn btn-mini btn-round btn-complete"><i class="icon-ok"></i></button>
                                            <button url="{{ path('user_reject', { 'userId': member.id }) }}" id="{{member.id}}" class="btn btn-mini btn-round btn-delete"><i class="icon-remove"></i></button>
                                        {% else %}
                                            <span class="label label-success">Activated</span>   <br><br>
                                        {% endif %}
                                    </div>
                                    <a href="{{path('user_profile',{'userId' :member.id})}}">
                                        {% if member.path == null %}
                                            <img class="dashboard-avatar" alt="Not Found" src="/web/bundles/User/Photo/default.jpg">
                                        {% else %}
                                            <img class="dashboard-avatar" alt="Not Found" src="{{member.path}}">

                                        {% endif %}
                                        <strong>Name:</strong> {{member.firstname}} {{member.lastname}}</a>
                                    </a><br>
                                    <strong>Department:</strong> {{member.department}}
                                    <br>
                                    <strong>Last Login:</strong> {{member.lastlogin|date('Y-m-d  H:i:s')}}<br><br>
                                </li>
                            {% endfor %}


                        </ul>
                    </div>
                </div>
            </div><!--/span-->
        </div>
        <div class="row-fluid sortable">
            <div class="box span12">
                <div class="box-header well" data-original-title>
                    <h2><i class="icon-list"></i> Ongoing Tasks </h2>
                    <div class="box-icon">

                        <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>

                    </div>
                </div>
                <div class="box-content">
                    {% if taskList != null %}
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Task</th>
                                <th>Due Date</th>
                                <th>Details</th>
                                <th>Type</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for task in taskList %}
                                <tr>
                                    <td width="20%">
                                        <a href="{{path('task_detail',{'taskId':task.id})}}" > {{task.name}}</a>
                                    </td>
                                    <td width="10%" class="center">
                                        {{task.duetimestamp}}
                                    </td>
                                    <td  width="60%" class="center">
                                        {{task.description}}
                                    </td>
                                    <td  width="10%" class="center">
                                        {% if task.type == 1 %}
                                            <span class="label label-info">Normal</span>
                                        {% elseif task.type == 2 %}
                                            <span class="label label-warning">Important</span>
                                        {% elseif task.type == 3 %}
                                            <span class="label label-inverse">Can Wait</span>
                                        {% elseif task.type == 4 %}
                                            <span class="label label-important">Urgent</span>
                                        {% endif %}

                                    </td>
                                </tr>

                            {% endfor %}

                            </tbody>
                        </table>

                    {% else %}
                        <p align ="center">
                            you have no task to complete
                        </p>

                    {% endif %}
                </div>
            </div><!--/span-->
        </div><!--/row-->

    </div>


    <div class="modal hide fade" id="delete">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3>Confirm</h3>
        </div>
        <div class="modal-body">
            <p align="center">Are you sure you want to delete this User?<br>His/Her account will be deleted from the System.
            </p>


        </div>
        <div class="modal-footer">

            <form action="empty" id = "continue-form" method="POST">
                <input name="id" id="del-id" type="hidden" value="empty" />
                <a href="#" class="btn" data-dismiss="modal">Close</a>
                <input type="submit" class="btn btn-primary" value="continue">
            </form>

        </div>
    </div>

    <div class="modal hide fade" id="complete">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3>Confirm</h3>
        </div>
        <div class="modal-body">
            <p align="center">Are you sure this is a member of your pillar?
            </p>


        </div>
        <div class="modal-footer">

            <form action="empty" id = "continue-form" method="POST">
                <input name="id" id="del-id" type="hidden" value="empty" />
                <a href="#" class="btn" data-dismiss="modal">Close</a>
                <input type="submit" class="btn btn-primary" value="continue">
            </form>

        </div>
    </div>

{% endblock %}