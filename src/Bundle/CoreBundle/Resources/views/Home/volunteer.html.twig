{%  extends "CoreBundle:Base:base.html.twig" %}


{% block content %}
<div id="content" class="span10">
    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header well" data-original-title>
                <h2><i class="icon-list"></i> Incomplete Tasks </h2>
                <div class="box-icon">

                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>

                </div>
            </div>
            <div class="box-content">
                {% if taskList != null %}
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Task</th>
                            <th>Due Date</th>
                            <th>Details</th>
                            <th>Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for task in taskList %}
                        <tr>
                            <td width="20%">
                                <a href="{{path('task_details',{'taskID':task.id})}}" > {{task.name}}</a>
                            </td>
                            <td width="10%" class="center">
                                {{task.duetimestamp}}
                            </td>
                            <td  width="60%" class="center">
                                {{task.description}}
                            </td>
                            <td  width="10%" class="center">
                                {% if task.type == 1 %}
                                <span class="label label-info">Normal</span>
                                {% elseif task.type == 2 %}
                                <span class="label label-warning">Important</span>
                                {% elseif task.type == 3 %}
                                <span class="label label-inverse">Can Wait</span>
                                {% elseif task.type == 4 %}
                                <span class="label label-important">Urgent</span>
                                {% endif %}

                            </td>
                        </tr>

                        {% endfor %}

                    </tbody>
                </table>

                {% else %}
                <p align ="center">
                    you have no task to complete
                </p>

                {% endif %}
            </div>
        </div><!--/span-->
    </div><!--/row-->

</div>



{% endblock %}